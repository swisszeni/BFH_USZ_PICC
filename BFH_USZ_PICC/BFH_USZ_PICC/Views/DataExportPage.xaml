<?xml version="1.0" encoding="utf-8" ?>
<d:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   x:Class="BFH_USZ_PICC.Views.DataExportPage"
                   xmlns:utilitys="clr-namespace:BFH_USZ_PICC.Utilitys"
                   xmlns:d="clr-namespace:BFH_USZ_PICC.Views;assembly=BFH_USZ_PICC.Views"
                   xmlns:i18n="clr-namespace:BFH_USZ_PICC.Utilitys.Extensions"
                   Title="{i18n:Translate ExportPageTitle}"
                   BindingContext="{Binding [ExportViewModel], Source={StaticResource ViewModelLocator}}">  
  <ScrollView>
    <StackLayout Orientation="Vertical"
                 VerticalOptions="FillAndExpand"
                 Margin="15">
      <Label Text="{i18n:Translate ExportPagePageInstructionText}"/>
      <Button Text="{i18n:Translate ExportButtonText}" 
              Command="{Binding ExportButtonCommand}"
              Style="{StaticResource ButtonStyleGray}"
              HorizontalOptions="FillAndExpand"/>
    </StackLayout>
  </ScrollView>
</d:BaseContentPage>