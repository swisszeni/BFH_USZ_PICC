<?xml version="1.0" encoding="utf-8" ?>
<d:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BFH_USZ_PICC.Views.MyPICCPage"
             xmlns:d="clr-namespace:BFH_USZ_PICC.Views;assembly=BFH_USZ_PICC.Views">
  <Grid.Resources>
    <ResourceDictionary>
      
    </ResourceDictionary>
  </Grid.Resources>
  <ScrollView>
    <StackLayout Orientation="Vertical">
      <Label Text="Sie scheinen momentan noch keinen PICC erfasst zu haben." TextColor="Gray"/>
      <Button Text="Neuer PICC erfassen" Clicked="AddPICCClick"/>
      <Label Text="Aktueller PICC" FontSize="20"/>
      <Label Text="Frühere PICC" FontSize="20"/>
      <ListView x:Name="FormerPICCList" ItemSelected="SelectedFormerPICC">
        <ListView.ItemTemplate>
          <DataTemplate>
            <TextCell Text="{Binding PICCModel.PICCName}" Detail="{Binding InsertDate}" />
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
  </ScrollView>
</d:BaseContentPage>