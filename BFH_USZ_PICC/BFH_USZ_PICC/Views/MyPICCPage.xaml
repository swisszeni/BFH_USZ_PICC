<?xml version="1.0" encoding="utf-8" ?>
<d:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BFH_USZ_PICC.Views.MyPICCPage"
             xmlns:d="clr-namespace:BFH_USZ_PICC.Views;assembly=BFH_USZ_PICC.Views"
             xmlns:i18n="clr-namespace:BFH_USZ_PICC.Utilitys.Extensions"
             Title="{i18n:Translate MyPICCPageTitleText}">
  <Grid.Resources>
    <ResourceDictionary>

    </ResourceDictionary>
  </Grid.Resources>
  <ScrollView>
    <StackLayout Orientation="Vertical">
      <Label Text="{i18n:Translate MyPICCPageNoPiccEnteredText}" TextColor="Gray"/>
      <Button Text="{i18n:Translate MyPICCPageAddNewPICCButtonText}" Clicked="AddPICCClick"/>
      <Label Text="{i18n:Translate MyPICCPageCurrentPICCText}" FontSize="20"/>
      <Label Text="{i18n:Translate MyPICCPagePreviousPICCText}" FontSize="20"/>
      <ListView x:Name="FormerPICCList" ItemSelected="SelectedFormerPICC">
        <ListView.ItemTemplate>
          <DataTemplate>
            <TextCell Text="{Binding PICCModel.PICCName}" Detail="{Binding InsertDate}" />
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
  </ScrollView>
</d:BaseContentPage>