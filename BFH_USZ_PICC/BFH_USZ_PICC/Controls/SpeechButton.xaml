<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="BFH_USZ_PICC.Controls.SpeechButton">
    <Image HeightRequest="30"
           WidthRequest="30"
           Source="{Binding EnabledImagePath}"
           IsVisible="{Binding IsOnState}"/>
    <Image HeightRequest="30"
           WidthRequest="30"
           Source="{Binding DisabledImagePath}"
           IsVisible="{Binding IsOnState, Converter={StaticResource NegateBooleanConverter}}"/>
</Grid>
